#!/usr/bin/env bash

echo "Run .claude-code"

mkdir -p ~/.claude

# Symlink configuration files
ln -sf "$HOME/.dotfiles/home/claude/CLAUDE.md" ~/.claude/CLAUDE.md
ln -sf "$HOME/.dotfiles/home/claude/settings.json" ~/.claude/settings.json

# Symlink entire skills directory
rm -rf ~/.claude/skills
ln -sf "$HOME/.dotfiles/home/claude/skills" ~/.claude/skills

# Symlink entire agents directory
rm -rf ~/.claude/agents
ln -sf "$HOME/.dotfiles/home/claude/agents" ~/.claude/agents

# MCP
claude mcp add --scope user chrome-devtools npx chrome-devtools-mcp@latest
claude mcp add --scope user playwright npx @playwright/mcp@latest
claude mcp add --scope user --transport http flare https://flareapp.io/mcp --header "Authorization: Bearer <INSERT-YOUR-TOKEN-HERE>"
claude mcp add-json --scope user github '{"type":"http","url":"https://api.githubcopilot.com/mcp","headers":{"Authorization":"Bearer <YOUR_GITHUB_TOKEN>"}}'